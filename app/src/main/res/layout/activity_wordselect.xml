<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 繝�繝ｳ繧ｭ繝ｼ -->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:background="@drawable/background"
        android:layout_weight="1"
        >

        <TableRow android:layout_weight="1" android:layout_height="0dip" android:layout_width="match_parent">

			<Button
				android:id="@+id/Button01"
				android:gravity="center_vertical"
				android:layout_width="0dip"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:layout_margin="@dimen/padding_small"
			    android:minWidth="@dimen/button_size"
			    android:minHeight="@dimen/button_size"
				android:paddingLeft="@dimen/padding_medium"
				android:textColor="@color/black"
				android:textSize="@dimen/text_size_big"
				android:background="@drawable/button_fuka"
			/>

		</TableRow>

        <TableRow android:layout_weight="1" android:layout_height="0dip" android:layout_width="match_parent">

			<Button
				android:id="@+id/Button02"
				android:gravity="center_vertical"
				android:layout_width="0dip"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:layout_margin="@dimen/padding_small"
			    android:minWidth="@dimen/button_size"
			    android:minHeight="@dimen/button_size"
				android:paddingLeft="@dimen/padding_medium"
				android:textColor="@color/black"
				android:textSize="@dimen/text_size_big"
				android:background="@drawable/button_fuka"
			/>

		</TableRow>

        <TableRow android:layout_weight="1" android:layout_height="0dip" android:layout_width="match_parent">

			<Button
				android:id="@+id/Button03"
				android:gravity="center_vertical"
				android:layout_width="0dip"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:layout_margin="@dimen/padding_small"
			    android:minWidth="@dimen/button_size"
			    android:minHeight="@dimen/button_size"
				android:paddingLeft="@dimen/padding_medium"
				android:textColor="@color/black"
				android:textSize="@dimen/text_size_big"
				android:background="@drawable/button_fuka"
			/>

		</TableRow>

        <TableRow android:layout_weight="1" android:layout_height="0dip" android:layout_width="match_parent">

			<Button
				android:id="@+id/Button04"
				android:gravity="center_vertical"
				android:layout_width="0dip"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:layout_margin="@dimen/padding_small"
			    android:minWidth="@dimen/button_size"
			    android:minHeight="@dimen/button_size"
				android:paddingLeft="@dimen/padding_medium"
				android:textColor="@color/black"
				android:textSize="@dimen/text_size_big"
				android:background="@drawable/button_fuka"
			/>

		</TableRow>

        <TableRow android:layout_weight="1" android:layout_height="0dip" android:layout_width="match_parent">

			<Button
				android:id="@+id/Button05"
				android:gravity="center_vertical"
				android:layout_width="0dip"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:layout_margin="@dimen/padding_small"
			    android:minWidth="@dimen/button_size"
			    android:minHeight="@dimen/button_size"
				android:paddingLeft="@dimen/padding_medium"
				android:textColor="@color/black"
				android:textSize="@dimen/text_size_big"
				android:background="@drawable/button_fuka"
			/>

		</TableRow>

        <TableRow android:layout_weight="1" android:layout_height="0dip" android:layout_width="match_parent">

			<Button
				android:id="@+id/Button06"
				android:gravity="center_vertical"
				android:layout_width="0dip"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:layout_margin="@dimen/padding_small"
			    android:minWidth="@dimen/button_size"
			    android:minHeight="@dimen/button_size"
				android:paddingLeft="@dimen/padding_medium"
				android:textColor="@color/black"
				android:textSize="@dimen/text_size_big"
				android:background="@drawable/button_fuka"
			/>

		</TableRow>

        <TableRow android:layout_weight="1" android:layout_height="0dip" android:layout_width="wrap_content">

			<Button
				android:id="@+id/Button07"
				android:gravity="center_vertical"
				android:layout_width="0dip"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:layout_margin="@dimen/padding_small"
			    android:minWidth="@dimen/button_size"
			    android:minHeight="@dimen/button_size"
				android:paddingLeft="@dimen/padding_medium"
				android:textColor="@color/black"
				android:textSize="@dimen/text_size_big"
				android:background="@drawable/button_fuka"
			/>

		</TableRow>

        <TableRow android:layout_weight="1" android:layout_height="0dip" android:layout_width="wrap_content">

		</TableRow>

    </TableLayout>

	<LinearLayout
    	android:id="@+id/bottom"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentBottom="true"
    	android:background="@color/silver"
    	>
		<Button
			android:id="@+id/cancel"
	    	android:layout_width="match_parent"
      		android:layout_height="match_parent"
      		android:layout_weight="1"
      		android:layout_margin="@dimen/padding_small"
			android:text="@string/menu_cancel"
			android:textColor="@color/white"
            android:textSize="@dimen/text_size_big"
			android:background="@drawable/button_gray"
		/>
			<Button
				android:id="@+id/ButtonPrev"
	      		android:layout_width="match_parent"
	      		android:layout_height="match_parent"
	      		android:layout_weight="1"
	      		android:layout_margin="@dimen/padding_small"
				android:text="@string/menu_prev"
				android:textColor="@color/white"
	            android:textSize="@dimen/text_size_big"
				android:background="@drawable/button_job"
			/>
			<Button
				android:id="@+id/ButtonNext"
	      		android:layout_width="match_parent"
	      		android:layout_height="match_parent"
	      		android:layout_weight="1"
	      		android:layout_margin="@dimen/padding_small"
				android:text="@string/menu_next"
				android:textColor="@color/white"
	            android:textSize="@dimen/text_size_big"
				android:background="@drawable/button_job"
			/>
	</LinearLayout>

</LinearLayout>

